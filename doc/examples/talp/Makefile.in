DLB_HOME = @prefix@

MPICC= @MPICC@
CFLAGS =
CPPFLAGS = -I$(DLB_HOME)/include
LDFLAGS =  -L$(DLB_HOME)/lib -ldlb_mpi -Wl,-rpath,$(DLB_HOME)/lib

all: talp_01 get_times

talp_01: talp_01.c
	$(MPICC) $^ -o $@ $(CFLAGS) $(CPPFLAGS) $(LDFLAGS)
get_times: get_times.c
	$(MPICC) $^ -o $@ $(CFLAGS) $(CPPFLAGS) $(LDFLAGS)

.PHONY: clean
clean:
	rm -f talp_01 get_times
