#!/bin/bash

# variables detected at configure time
DLB_HOME=@prefix@
MPIEXEC=@MPIEXEC@
MPIEXEC_EXPORT_FLAG=@MPIEXEC_EXPORT_FLAG@

# variables to be modified by the user
TRACE=0
DLB=1
TALP=1
MPIEXEC_BIND_FLAG=""

APP="./talp_01"
ARGS=""

if [[ $DLB == 1 ]] ; then
    if [[ $TRACE == 1 ]] ; then
        TRACENAME="pils_dlb.prv"
        PRELOAD="$EXTRAE_HOME/lib/libmpitrace.so:$DLB_HOME/lib/libdlb_mpi_instr.so"
        export EXTRAE_CONFIG_FILE="extrae.xml"
    else
        PRELOAD="$DLB_HOME/lib/libdlb_mpi.so"
    fi

    if [[ $TALP == 1 ]] ; then
        export DLB_ARGS+=" --talp --talp-summary=pop-metrics:node"
    fi
else
    if [[ $TRACE == 1 ]] ; then
        TRACENAME="pils.prv"
        PRELOAD="$EXTRAE_HOME/lib/libmpitrace.so"
        export EXTRAE_CONFIG_FILE="extrae.xml"
    fi
fi

$MPIEXEC -np 2 $MPIEXEC_BIND_FLAG $MPIEXEC_EXPORT_FLAG LD_PRELOAD=$PRELOAD $APP $ARGS

if [[ $TRACE == 1 ]] ; then
    $EXTRAE_HOME/bin/mpi2prv -f TRACE.mpits -no-keep-mpits -o "$TRACENAME"
    rm -f TRACE.spawn
fi
