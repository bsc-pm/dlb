#!/bin/bash

# variables detected at configure time
DLB_HOME=@prefix@
MPIEXEC=@MPIEXEC@

# variables to be modified by the user
TRACE=0
DLB=0
LEWI_KEEP_ONE_CPU=0
NUMTHREADS=2
MPIEXEC_BIND_FLAG=""

APP="./mpi_omp_pils"
ARGS="/dev/null 0.1 50 500"

if [[ $DLB == 1 ]] ; then
    if [[ $TRACE == 1 ]] ; then
        TRACENAME="pils_dlb.prv"
        PRELOAD="$EXTRAE_HOME/lib/libompitrace.so:$DLB_HOME/lib/libdlb_mpi_instr.so"
        export EXTRAE_CONFIG_FILE="extrae.xml"
    else
        PRELOAD="$DLB_HOME/lib/libdlb_mpi.so"
    fi
    export DLB_ARGS+=" --lewi --ompt --lewi-ompt=mpi:borrow"
    export OMP_WAIT_POLICY=passive
    export KMP_BLOCKTIME=0

    # Advanced: use --lewi-keep-one-cpu
    if [[ $LEKEEP_ONE_CPUMPI == 1 ]] ; then
        if [[ $TRACE == 1 ]] ; then
            TRACENAME="pils_dlb_lewi_keep_one_cpu.prv"
        fi
        export DLB_ARGS+=" --lewi-keep-one-cpu"
    fi
else
    if [[ $TRACE == 1 ]] ; then
        TRACENAME="pils.prv"
        PRELOAD="$EXTRAE_HOME/lib/libompitrace.so"
        export EXTRAE_CONFIG_FILE="extrae.xml"
    fi
    export DLB_ARGS+=" --no-lewi"
fi

export OMP_NUM_THREADS=$NUMTHREADS
$MPIEXEC -np 2 $MPIEXEC_BIND_FLAG $DLB_HOME/bin/dlb_run env LD_PRELOAD="$PRELOAD" $APP $ARGS

if [[ $TRACE == 1 ]] ; then
    $EXTRAE_HOME/bin/mpi2prv -f TRACE.mpits -no-keep-mpits -o "$TRACENAME"
    rm -f TRACE.spawn
fi
