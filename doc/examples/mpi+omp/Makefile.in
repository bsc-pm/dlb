DLB_HOME = @prefix@

MPICC = @MPICC@
CFLAGS = @OPENMP_CFLAGS@ -g
CPPFLAGS = -I$(DLB_HOME)/include
LDFLAGS = -L$(DLB_HOME)/lib -ldlb_instr -Wl,-rpath,$(DLB_HOME)/lib

mpi_omp_pils: mpi_omp_pils.c
	$(MPICC) $^ -o $@ $(CFLAGS) $(CPPFLAGS) $(LDFLAGS)

.PHONY: clean
clean:
	rm -f mpi_omp_pils
