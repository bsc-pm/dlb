#ifdef HAVE_CONFIG_H
#include <config.h>
#endif

#ifdef MPI_LIB

#include "LB_MPI/MPI_interface.h"
#include "support/debug.h"

#include <mpi.h>
#include <stdio.h>

#ifndef MPI3_CONST
#  if MPI_VERSION >= 3
#    define MPI3_CONST const
#  else
#    define MPI3_CONST
#  endif
#endif

#pragma GCC visibility push(default)

#pragma pygen start where("MPI3_only" not in info)
int {MPI_NAME}({C_PARAMS}) {{
    verbose(VB_MPI_INT, ">> {MPI_NAME}...............");
    DLB_{MPI_NAME}_enter({C_ARG_LIST});
    int res = P{MPI_NAME}({C_ARG_LIST});
    DLB_{MPI_NAME}_leave();
    verbose(VB_MPI_INT, "<< {MPI_NAME}...............");
    return res;
}}

#pragma pygen end

#if MPI_VERSION >= 3
#pragma pygen start where("MPI3_only" in info)
int {MPI_NAME}({C_PARAMS}) {{
    verbose(VB_MPI_INT, ">> {MPI_NAME}...............");
    DLB_{MPI_NAME}_enter({C_ARG_LIST});
    int res = P{MPI_NAME}({C_ARG_LIST});
    DLB_{MPI_NAME}_leave();
    verbose(VB_MPI_INT, "<< {MPI_NAME}...............");
    return res;
}}

#pragma pygen end
#endif

#pragma GCC visibility pop

#endif /* MPI_LIB */
