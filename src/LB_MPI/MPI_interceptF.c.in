#ifdef HAVE_CONFIG_H
#include <config.h>
#endif

#ifdef MPI_LIB

#include "LB_MPI/MPI_interfaceF.h"
#include "support/debug.h"

#include <mpi.h>

#ifndef MPI3_CONST
#  if MPI_VERSION >= 3
#    define MPI3_CONST const
#  else
#    define MPI3_CONST
#  endif
#endif

// pmpi headers
#pragma pygen start
void p{MPI_LCASE}({F_PARAMS});
#pragma pygen end

#pragma GCC visibility push(default)

// mpi intercept
#pragma pygen start where("MPI3_only" not in info)
void {MPI_LCASE}({F_PARAMS}) {{
    verbose(VB_MPI_INT, ">> {MPI_NAME}...............");
    DLB_{MPI_NAME}_F_enter({F_ARG_LIST});
    p{MPI_LCASE}({F_ARG_LIST});
    DLB_{MPI_NAME}_F_leave();
    verbose(VB_MPI_INT, "<< {MPI_NAME}...............");
}}
void {MPI_LCASE}_ ({F_PARAMS}) __attribute__((alias("{MPI_LCASE}")));
void {MPI_LCASE}__ ({F_PARAMS}) __attribute__((alias("{MPI_LCASE}")));

#pragma pygen end

#if MPI_VERSION >= 3
#pragma pygen start where("MPI3_only" in info)
void {MPI_LCASE}({F_PARAMS}) {{
    verbose(VB_MPI_INT, ">> {MPI_NAME}...............");
    DLB_{MPI_NAME}_F_enter({F_ARG_LIST});
    p{MPI_LCASE}({F_ARG_LIST});
    DLB_{MPI_NAME}_F_leave();
    verbose(VB_MPI_INT, "<< {MPI_NAME}...............");
}}
void {MPI_LCASE}_ ({F_PARAMS}) __attribute__((alias("{MPI_LCASE}")));
void {MPI_LCASE}__ ({F_PARAMS}) __attribute__((alias("{MPI_LCASE}")));

#pragma pygen end
#endif

#pragma GCC visibility pop

#endif /* MPI_LIB */
